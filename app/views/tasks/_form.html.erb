<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.select :status, [['アクティブ', 'active'], ['完了', 'inactive']] %>
  <%= f.text_field :content %>
  <%= f.submit '登録'%>
<% end %>